{
  "type": "page",
  "title": "表单模式汇总",
  "subTitle": "展示各种模式的 Form",
  "body": [
    {
      "type": "grid",
      "columns": [
        {
          "type": "card",
          "title": "常规模式-横向",
          "style": {
            "height": "100%"
          },
          "body": {
            "type": "form",
            "api": "/api/mock2/form/saveForm?waitSeconds=2",
            "labelCol": {
              "span": 4
            },
            "actionsProps": {
              "wrapperCol": { "offset": 4 }
            },
            "actions": {
              "type": "button",
              "level": "submit",
              "body": "登录"
            },
            "body": [
              {
                "type": "input",
                "name": "email",
                "level": "email",
                "itemProps": {
                  "tooltip": "This is a required field",
                  "required": true
                },
                "placeholder": "请输入邮箱",
                "label": "邮箱"
              },
              {
                "type": "input",
                "name": "password",
                "level": "password",
                "label": "密码",
                "itemProps": {
                  "required": true
                },
                "placeholder": "请输入密码"
              },
              {
                "type": "checkbox",
                "name": "rememberMe",
                "label": "记住登录"
              }
            ]
          }
        },
        {
          "type": "card",
          "title": "表单模式-纵向",
          "body": {
            "type": "form",
            "api": "/api/mock2/form/saveForm?waitSeconds=2",
            "layout": "vertical",
            "actions": {
              "type": "button",
              "level": "submit",
              "body": "登录"
            },
            "body": [
              {
                "type": "input",
                "name": "email",
                "level": "email",
                "itemProps": {
                  "tooltip": "This is a required field",
                  "required": true
                },
                "placeholder": "请输入邮箱",
                "label": "邮箱"
              },
              {
                "type": "input",
                "level": "password",
                "name": "password",
                "label": "密码",
                "itemProps": {
                  "required": true
                },
                "placeholder": "请输入密码"
              },
              {
                "type": "checkbox",
                "name": "rememberMe",
                "label": "记住登录"
              }
            ]
          }
        }
      ]
    },
    {
      "type": "grid",
      "columns": [
        {
          "type": "card",
          "title": "grid模式-横向",
          "body": {
            "type": "form",
            "api": "/api/mock2/form/saveForm?waitSeconds=2",
            "mode": "grid",
            "rowProps": {
              "gutter": [8, 8]
            },
            "actions": {
              "type": "button",
              "level": "submit",
              "body": "登录"
            },
            "actionsProps": {
              "wrapperCol": {
                "offset": 0
              }
            },
            "body": [
              {
                "type": "input",
                "name": "email",
                "level": "email",
                "itemProps": {
                  "tooltip": "This is a required field",
                  "required": true
                },
                "colProps": { "span": 12 },
                "placeholder": "请输入邮箱",
                "label": "邮箱"
              },
              {
                "type": "input",
                "name": "password",
                "level": "password",
                "label": "密码",
                "colProps": { "span": 12 },
                "itemProps": {
                  "required": true
                },
                "placeholder": "请输入密码"
              }
            ]
          }
        },
        {
          "type": "card",
          "title": "grid模式-纵向",
          "body": {
            "type": "form",
            "api": "/api/mock2/form/saveForm?waitSeconds=2",
            "layout": "vertical",
            "actions": {
              "type": "button",
              "level": "submit",
              "body": "登录"
            },
            "colProps": {
              "span": 12
            },
            "mode": "grid",
            "body": [
              {
                "type": "input",
                "name": "email",
                "level": "email",
                "itemProps": {
                  "tooltip": "This is a required field",
                  "required": true
                },
                "placeholder": "请输入邮箱",
                "label": "邮箱"
              },
              {
                "type": "input",
                "level": "password",
                "name": "password",
                "label": "密码",
                "itemProps": {
                  "required": true
                },
                "placeholder": "请输入密码"
              }
            ]
          }
        }
      ]
    }
  ]
}
